---
// Import the SVG asset to be used in the component
import blackHole from '/src/assets/black_hole.svg';
---

<footer id="main-footer" class="w-full pt-4" style="background: radial-gradient(circle at top left, rgba(255,140,0,0.15), transparent 35%), radial-gradient(circle at top right, rgba(255,140,0,0.15), transparent 35%), #000;">
    
    <!-- CONTACT US TICKER (Corrected with Centered Bullets) -->
    <section id="contact-ticker" class="py-16 overflow-x-hidden">
        <div class="flex justify-between items-center">
            <span class="text-6xl uppercase tracking-widest text-gray-300 -ml-5">CONTACT US</span>
            <span class="text-6xl uppercase tracking-widest text-gray-300">&bull;</span>
            <span class="text-6xl uppercase tracking-widest text-gray-300">CONTACT US</span>
            <span class="text-6xl uppercase tracking-widest text-gray-300">&bull;</span>
            <span class="text-6xl uppercase tracking-widest text-gray-300 -mr-5">CONTACT US</span>
        </div>
    </section>
    
    <div class="container mx-auto px-4">
        <nav id="footer-nav" class="py-4">
            <ul class="flex justify-center items-center space-x-2">
                <li><a href="/team" class="footer-link">Our Team</a></li>
                <li><span class="text-gray-500">|</span></li>
                <li><a href="/contact" class="footer-link">Contact Us</a></li>
                <li><span class="text-gray-500">|</span></li>
                <li><a href="/companies" class="footer-link">Companies</a></li>
            </ul>
        </nav>

        <!-- BLACK HOLE IMAGES -->
        <div class="flex justify-center items-center gap-16 -mb-4">
            <!-- Left Side Black Holes -->
            <div class="flex items-center">
                <img src={blackHole.src} alt="Black Hole" class="w-16 h-16 opacity-75" width="64" height="64">
                <img src={blackHole.src} alt="Black Hole" class="w-12 h-12 opacity-75 -ml-6" width="48" height="48">
            </div>
            <!-- Right Side Black Holes -->
            <div class="flex items-center">
                <img src={blackHole.src} alt="Black Hole" class="w-12 h-12 opacity-75 -mr-6" width="48" height="48">
                <img src={blackHole.src} alt="Black Hole" class="w-16 h-16 opacity-75" width="64" height="64">
            </div>
        </div>

        <div class="text-center my-12">
            <p class="text-lg uppercase text-gray-300 tracking-widest" style="text-shadow: 0 0 8px rgba(255, 255, 255, 0.15);">
                WE TURN BOLD IDEAS INTO MARKET-LEADING COMPANIES
            </p>
        </div>

        <div class="flex justify-between items-center text-sm text-gray-400 py-4 border-t border-gray-700">
            <div>
                <p>Aptura Labs &copy; 2025</p>
            </div>
            <div>
                <p>ALL RIGHTS RESERVED</p>
            </div>
        </div>
    </div>

    <div class="w-full h-32 overflow-hidden mt-8">
        <div class="text-left select-none -mt-8">
            <p class="text-[16.4rem] font-extrabold text-white tracking-wider leading-none whitespace-nowrap">
                aptura labs
            </p>
        </div>
    </div>

</footer>