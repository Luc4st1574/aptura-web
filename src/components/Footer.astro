---
// src/components/Footer.astro (assuming this is your component path)
import blackHole from '../assets/black_hole.svg';
import footerText from '../assets/footer-text.png';
import footerBackground from '../assets/footer-background.png';
---

<style>
    /* Custom CSS for the scrolling ticker */
    @keyframes scroll-left {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-50%); /* Scroll half the content width for seamless loop */
        }
    }

    .ticker-container {
        display: flex; /* Make children lay out in a row */
        white-space: nowrap; /* Prevent text from wrapping */
        animation: scroll-left 20s linear infinite; /* Adjust duration and timing as needed */
    }

    /* To pause the animation on hover (optional, applies to the whole ticker area) */
    #contact-ticker:hover .ticker-container {
        animation-play-state: paused;
    }

    /* Custom styles for the glow effect on the motto text */
    .text-orange-glow {
        text-shadow: 0 0 12px rgba(255, 165, 0, 0.25);
    }
</style>

<footer
    id="main-footer"
    class="w-full pt-24 relative overflow-hidden"
    style={`
        background-image: url(${footerBackground.src});
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-color: #000;
    `}
>
    <section id="contact-ticker" class="py-4 overflow-x-hidden -translate-y-24">
        <div class="ticker-container">
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white px-8">CONTACT US</span>
            <span class="text-3xl sm:text-4xl md:text-5xl uppercase tracking-widest text-white opacity-15 px-8">&bull;</span>
        </div>
    </section>

    <div class="container mx-auto px-4">
        <nav id="footer-nav" class="py-2">
            <ul class="flex justify-center items-center space-x-2 sm:space-x-4">
                <li><a href="/team" class="text-sm text-gray-400 hover:text-white tracking-wider font-light">Our Team</a></li>
                <li><span class="text-gray-600">|</span></li>
                <li><a href="/contact" class="text-sm text-gray-400 hover:text-white tracking-wider font-light">Contact Us</a></li>
                <li><span class="text-gray-600">|</span></li>
                <li><a href="/companies" class="text-sm text-gray-400 hover:text-white tracking-wider font-light">Companies</a></li>
            </ul>
        </nav>

        <div class="flex flex-col md:flex-row justify-center items-center py-2 text-center md:text-left">
            <div class="relative w-24 h-24 sm:w-28 sm:h-28 -translate-y-8 md:-translate-y-11 mb-4 md:mb-0">
                <img src={blackHole.src} alt="Black Hole" class="absolute w-16 h-16 sm:w-20 sm:h-20 top-2 right-0" />
                <img src={blackHole.src} alt="Black Hole" class="absolute w-10 h-10 sm:w-14 sm:h-14 top-10 sm:top-14 right-8 sm:right-11" />
            </div>
            <p
                class="text-xl sm:text-2xl md:text-3xl uppercase text-gray-300 tracking-[0.15em] sm:tracking-[0.2em] px-4 md:px-0 mx-auto md:-mx-8 text-orange-glow"
            >
                WE TURN BOLD IDEAS INTO MARKET LEADING COMPANIES
            </p>
            <div class="relative w-24 h-24 sm:w-28 sm:h-28 -translate-y-8 md:-translate-y-11 mt-4 md:mt-0">
                <img src={blackHole.src} alt="Black Hole" class="absolute w-16 h-16 sm:w-20 sm:h-20 top-2 left-0" />
                <img src={blackHole.src} alt="Black Hole" class="absolute w-10 h-10 sm:w-14 sm:h-14 top-10 sm:top-14 left-8 sm:left-11" />
            </div>
        </div>

        <div class="flex justify-center">
            <div class="w-11/12 border-t border-white mt-8 mb-8"></div>
        </div>

        <div class="flex flex-col sm:flex-row justify-between items-center text-sm text-white py-2 px-4 sm:px-16 text-center">
            <div class="mb-2 sm:mb-0">
                <p>Aptura Labs &copy; 2025</p>
            </div>
            <div class="flex items-center space-x-2">
                <p>ALL RIGHTS RESERVED</p>
            </div>
        </div>
    </div>

    <div class="w-full mt-8">
        <img
            src={footerText.src}
            alt="aptura labs"
            class="w-full h-auto object-cover"
        />
    </div>
</footer>